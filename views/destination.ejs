<% layout('layout/boilerplate.ejs') %>
<%- include('partial/flash.ejs') %>
    <h1 class="mt-5 mb-5">All Destinations are here!</h1>
    <% for(i=0;i<allDest.length;i++){ %> 
    
      <div class="card mb-4" >
        <div class="row">
          <div class="col-md-4">
            <img class="img-fluid" style="height: 17rem; width: 55rem;" src="<%=allDest[i].imageURL%>" alt="Card image cap">
          </div>
          <div class="col-mg-8">
            <div class="card-body">
              <h5 class="card-title"><%=allDest[i].name%></h5>
              <p class="card-text"><%= allDest[i].location %></p>
              <p class="card-text">$<%= allDest[i].price %></p>
              <a href="/destination/<%=allDest[i].id%>"><button class="btn btn-info">Detail</button></a>
            </div>
          </div>
        </div>
      </div>
    <% } %> 

